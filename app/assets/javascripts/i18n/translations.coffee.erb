#= depend_on_locales

locales = {}

<%
  locales_exporter = ::RailsAssetLocalization::LocalesExporter.new
  I18n.available_locales.uniq.each do |locale|
%>
locales['<%= locale %>'] = {}
locales['<%= locale %>']['translation'] = <%= locales_exporter.translations[locale.to_sym].to_json %>
<%
  end
%>

window.bundledLocales = locales